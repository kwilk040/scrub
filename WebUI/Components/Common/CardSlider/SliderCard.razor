<div class="artist-card p-3">
    @if (WithOrderBadges)
    {
        @switch (Id)
        {
            case 1:
            {
                <span class="artist-card-badge first badge bg-love p-1 px-2 fs-4">
                    #@Id
                </span>
                break;
            }
            default:
            {
                <span class="artist-card-badge badge bg-pine p-1 px-2">
                    #@Id
                </span>
                break;
            }
        }
    }
    <div class="artist-card-image-wrapper">
        @if (Cover is null)
        {
            <img src="https://i.redd.it/ggliiayqqq4f1.jpeg" alt="artist">
        }
        else
        {
            <img src="@Cover" alt="artist">
        }
        <span class="artist-card-scrobble-count bg-pine px-2 rounded">@Scrubs scrubs</span>
    </div>

    <h3 class="text-center fs-5 mt-1">@Title</h3>
    <span class="w-100 text-center fs-6">@SubTitle</span>
</div>


@code
{
    [Parameter] public int Scrubs { get; set; }
    [Parameter] public int Id { get; set; }

    [Parameter] public bool WithOrderBadges { get; set; } = true;

    [Parameter] public string Title { get; set; }

    [Parameter] public string? SubTitle { get; set; }
    [Parameter] public string? Cover { get; set; }
}
